<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg1"
    tools:context="com.example.vishnu.findmybus.MainActivity">


    <EditText
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/input"
        android:ellipsize="middle"
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="@color/colorPrimary"
        android:textSize="12dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv2"
        android:layout_alignLeft="@+id/tv2"
        android:layout_alignStart="@+id/tv2"
        android:layout_marginBottom="27dp"
        android:background="@drawable/input"
        android:gravity="center"
        android:hint="@string/Email"
        android:textColor="#ffffff"
        android:textColorHint="@color/colorPrimary"
        android:textSize="12dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/login"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_above="@+id/signup"
        android:layout_alignLeft="@+id/tv2"
        android:layout_alignStart="@+id/tv2"
        android:layout_marginBottom="73dp"
        android:layout_marginLeft="109dp"
        android:layout_marginStart="109dp"
        android:background="@drawable/signd"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/proceedsignup"
        android:layout_alignBottom="@+id/proceedsignup"
        android:layout_toEndOf="@+id/proceedsignup"
        android:layout_toRightOf="@+id/proceedsignup"
        android:text="@string/sign_up_btn"
        android:textAlignment="center"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/proceedsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/login"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/add_acnt"
        android:textColor="@color/colorAccent"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_above="@+id/tv1"
        android:layout_alignEnd="@+id/signup"
        android:layout_alignRight="@+id/signup"
        android:layout_marginBottom="112dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        app:srcCompat="@drawable/flogo" />

</RelativeLayout>
